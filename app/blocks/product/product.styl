.product
	margin 0 10px 25px
	max-width 320px

	&__card
		margin-bottom 15px

	&__text
		font-family 'Trebuchet MS'
		font-size 13px
		font-weight 400
		line-height 16px
		text-align center
		text-shadow 0 1px 0 #000000
		color #ffffff

		&_info
			display none

			^[0]__input:checked ~ &
				display block

		&_disabled
			display none
			color #ffff66

			^[0]_disabled &
				display block

		&_buy
			^[0]__input:checked ~ &
				display none

		label
			font-weight 700
			cursor pointer
			color #1698d9
			border-bottom 1px dashed #1698d9

	&__input
		display none
